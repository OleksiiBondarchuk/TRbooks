@model IEnumerable<TRbooks.Models.Book>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Our books</h2>
    <table id="customers" class="dataTable">
        <thead>
            <tr>
                <th>Book</th>
                <th>Genre</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

<button id="butOK">@Html.ActionLink("New Book", "New", "Books")</button>
@section scripts
    {
    <script>
            $(document).ready(function () {
               var table = $("#customers").DataTable({
                    ajax: {
                        url: "/api/books",
                        dataSrc:""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data,type,book) {
                                return "<a href='/books/edit/" + book.id + "'>" + book.name + "</a>";
                            }
                        },
                        {
                            data: "bookGenre.name"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='js-delete' id='butDELETE' data-book-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });

                $("#customers").on("click",".js-delete", function () {
                    var button = $(this);

                    if (confirm("Are you sure you want to delete this book ?"))
                    {
                        $.ajax({
                            url: "/api/books/" + button.attr("data-book-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    };
                });

            });
    </script>
}

