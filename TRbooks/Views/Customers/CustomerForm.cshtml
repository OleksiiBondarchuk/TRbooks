@model TRbooks.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
}

@using (Html.BeginForm("Save", "Customers"))
{
    <div id="form">
        <h2>@Model.Title</h2>
        <table>
            <tr>
                <td width="200">@Html.LabelFor(m => m.Customer.Name)</td>
                <td>
                    @Html.TextBoxFor(m => m.Customer.Name)<br />
                    @Html.ValidationMessageFor(m => m.Customer.Name)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Customer.MembershipTypeId)</td>
                <td>
                    @Html.DropDownListFor(m => m.Customer.MembershipTypeId,
                    new SelectList(Model.MembershipTypes, "Id", "Name"), "Select membership type")<br />
                    @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Customer.Birthdate)</td>
                <td>
                    @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:dd/MM/yyyy}")<br />
                    @Html.ValidationMessageFor(m => m.Customer.Birthdate)
                </td>
            </tr>
        </table>
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter)Subscribed to newsletter?
        </label>

        <div>
            @Html.HiddenFor(m => m.Customer.Id)
            @Html.AntiForgeryToken()
            <button type="submit" id="butOK" style="margin-top:15px">Save</button>
        </div>



    </div>
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}
