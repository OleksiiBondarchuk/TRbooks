@model IEnumerable<TRbooks.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Our customers</h2>
    <table id="customers" class="dataTable">
        <thead>
            <tr>
                <th>Customers </th>
                <th>Membership</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <button id="butOK">@Html.ActionLink("New Customer", "New", "Customers")</button>
@section scripts
    {
        <script>
            $(document).ready(function () {
               var table = $("#customers").DataTable({
                    ajax: {
                        url: "/api/customers",
                        dataSrc:""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data,type,customer) {
                                return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                            }
                        },
                        {
                            data: "membershipType.name"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='js-delete' id='butDELETE' data-customer-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });

                $("#customers").on("click",".js-delete", function () {
                    var button = $(this);

                    if (confirm("Are you sure you want to delete this customer ?"))
                    {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    };
                });

            });
        </script>
    }
